{{#unless newItem}}
  <button onclick={{route-action "createNew" "skill"}} class="fluid ui button"><i class="plus icon"></i> Add Skill</button>
  {{#each model.skills as |skill index|}}
    {{#cuppa-removable-container onRemove=(route-action "remove" skill)}}
      <h4 class="ui header">{{skill.name}}</h4>
    {{/cuppa-removable-container}}
  {{/each}}
{{else}}
  {{#cuppa-form onSubmit=(route-action "save") changeset=(changeset newItem SkillValidations) as |form|}}
    <div class="required field">
      <label>Skill</label>
      {{input type="text" value=form.changeset.name}}
    </div>
  {{/cuppa-form}}
{{/unless}}